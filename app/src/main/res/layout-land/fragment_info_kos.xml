<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="kos"
            type="com.kelompok_a.tubes_sewa_kos.Kos" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"
        android:background="?attr/backgroundColor"
        tools:context=".InfoKosFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:layout_margin="42dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:contentDescription="Image"
                android:src="@drawable/logokost" />
<!--                android:loadImage="@{kos.imgURL}"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Kos"
                    android:textSize="14dp"
                    android:textColor="?attr/textColor"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_nama_kos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="?attr/textColor"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tipe Kos"
                    android:textSize="14dp"
                    android:textColor="?attr/textColor"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_tipe_kos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="?attr/textColor"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Alamat Kos"
                    android:textSize="14dp"
                    android:textColor="?attr/textColor"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_alamat_kos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="?attr/textColor"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Kos"
                    android:textSize="14dp"
                    android:textColor="?attr/textColor"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_harga_kos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="?attr/textColor"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/button_cancel"
                    android:text="Back"/>
                <Button
                    android:id="@+id/map_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/button_ok"
                    android:text="Map"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    </ScrollView>
</layout>
